@page
@model PRN221_FMart_Project.Pages.Areas.Admin.StaffManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Staff.FullName" class="control-label"></label>
                <input asp-for="Staff.FullName" class="form-control" />
                <span asp-validation-for="Staff.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Email" class="control-label"></label>
                <input asp-for="Staff.Email" class="form-control" />
                <span asp-validation-for="Staff.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.HashPassword" class="control-label"></label>
                <input asp-for="Staff.HashPassword" class="form-control" />
                <span asp-validation-for="Staff.HashPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.RoleId" class="control-label"></label>
                <select asp-for="Staff.RoleId" class ="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Staff.PhoneNumber" class="control-label"></label>
                <input asp-for="Staff.PhoneNumber" class="form-control" />
                <span asp-validation-for="Staff.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.StartDate" class="control-label"></label>
                <input asp-for="Staff.StartDate" class="form-control" />
                <span asp-validation-for="Staff.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Staff.IsActive" /> @Html.DisplayNameFor(model => model.Staff.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
