@model PRN221_FMart_Project.Pages.Areas.Admin.StaffManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].HashPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff[0].IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Staff) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HashPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StaffId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StaffId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
