@page
@model PRN221_FMart_Project.Pages.Areas.Admin.Activities.ActivityListModel

@{
    ViewData["Title"] = "ActivityList";
}

<h1>ActivityList</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Staff")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
            <th>
                @Html.DisplayName("Time")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Activity) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <ul class="pagination">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.TotalPages? "active" : "")">
                <a asp-page="Index" asp-route-PageIndex="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</div>