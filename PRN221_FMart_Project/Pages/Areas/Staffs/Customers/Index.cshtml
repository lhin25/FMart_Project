@model PRN221_FMart_Project.Pages.Areas.Staffs.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("FullName")
            </th>
            <th>
                @Html.DisplayName("PhoneNumber")
            </th>
            <th>
                @Html.DisplayName("Points")
            </th>
            <th></th>
        </tr>
