@page
@model PRN221_FMart_Project.Pages.Areas.Staff.Invoices.InvoiceListModel

@{
    ViewData["Title"] = "InvoiceList";
}

<h1>InvoiceList</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].AppliedPoint)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Invoice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppliedPoint)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.InvoiceId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.InvoiceId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.InvoiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
